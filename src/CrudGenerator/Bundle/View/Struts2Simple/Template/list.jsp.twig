{% set basePath='../' %}
{% extends "index.jsp.twig" %}


{% block content %}

    {% set tableTile = table.name | humanize | titleize %}
    {% set actionTitle = action | humanize | titleize %}
    {% set tableSlug = table.name | dasherize %}
    {% set actionSlug = action | dasherize %}


    {% set tableName = table.name | upperCamelize %}
    {% set tableDao = tableName ~  'Dao' %}
    {% set tableParam = table.name | camelize %}
    {% set tableParamList = tableParam | pluralize %}

    <div class="row">


        <s:actionerror />
        <s:actionmessage />

        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>{% block title %}{{ action | humanize | titleize }} {{ table.name | humanize | titleize  | pluralize }}{% endblock %}</h1>
                </div>

                <div class="col-lg-24">
                    <div class="form-group col-md-8 col-sm-7">
                        <div class="row">

                            <s:form action="buscar" namespace="/{{ tableSlug }}" method="get">
                                <span class="col-md-4 col-sm-5">
                                  <s:submit  cssClass="btn btn-default btn-block" value="Buscar"/>
                                </span>
                                <span class="col-md-8 col-sm-7">
                                     <input type="text" name="q" placeholder="Buscar {{ tableTile }}"
                                            class="form-control">
                                </span>
                            </s:form>
                        </div>
                    </div>
                    <div class="col-md-offset-2 col-md-2 col-sm-offset-2 col-sm-3">
                        <div class="row">
                            <s:a cssClass="btn btn-primary btn-block" action="registrar">Crear</s:a>
                        </div>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                        <tr>
                            {% for field in table.fields %}
                                {% if field.isForeign %}
                                    {% set fieldTitle = field.reference.table | humanize | titleize %}
                                {% else %}
                                    {% set fieldTitle = field.name | humanize | titleize %}
                                {% endif %}
                                <th>{{ fieldTitle }}</th>
                            {% endfor %}
                            <th>Opciones</th>
                        </tr>
                        </thead>
                        <tbody>

                        <s:iterator value="{{ tableParamList }}">
                            <tr>
                                {% for field in table.fields %}
                                    {% if field.isForeign %}
                                        <td>
                                            <s:property value="{{ field.name | camelize }}"/>
                                        </td>
                                    {% else %}
                                        <td>
                                            <s:property value="{{ field.name | camelize }}"/>
                                        </td>
                                    {% endif %}
                                {% endfor %}
                                <td>
                                    <s:a cssClass="btn btn-danger pull-right" action="eliminar">Eliminar
                                        <s:param name="{{ tableParam }}.{{ table.primaryField }}"
                                                 value="{{ table.primaryField | camelize }}"/>
                                    </s:a>

                                    <s:a cssClass="btn btn-info pull-right" action="modificar">Modificar
                                        <s:param name="{{ tableParam }}.{{ table.primaryField }}"
                                                 value="{{ table.primaryField | camelize }}"/>
                                    </s:a>

                                </td>

                            </tr>
                        </s:iterator>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>


{% endblock %}