    if err != nil {
        return list, err
    }
    defer admDB.Close()

    list = {{ tableName }}List{Limit: limit, Offset: offset}
    qb := admDB.Model({{ tableSingleKey }})
    err = {{ tableSingleKey }}.preload(qb).
        Offset(offset).
        Limit(limit).
        Find(&list.Items).
        Error

    if err != nil {
        return list, err
    }
    err = qb.Count(&list.Total).Error
    if err != nil {
        list.Total = len(list.Items)
    }

    return list, nil
}


